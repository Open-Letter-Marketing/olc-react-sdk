{
  "compilerOptions": {
    "target": "ES5",
    "jsx": "react",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]  
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
